#include <cstdio>
#include <fstream>
#include <iostream>
#include <string>

int main() {
  std::ifstream shader_prog;
  if (1)
    shader_prog.open("../shader/vertex.vert", std::ios::in);
  else
    shader_prog.open("../shader/fragment.frag", std::ios::in);

  std::string shader_code, temp;
  while (!shader_prog.eof()) {
    std::getline(shader_prog, temp);

    shader_code.append(temp);
    shader_code = shader_code + '\n';
  }
  shader_prog.close();
  std::cout << shader_code;
  // return shader_code;
}
